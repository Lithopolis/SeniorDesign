<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Accuracy In Your "
        android:id="@+id/Title"
        android:textColor="#800000"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="Connect"
        android:textSize="10sp"
        android:id="@+id/connect_b"
        android:background="#800000"
        android:textColor="#ffffffff"
        android:onClick="start_connect_bt"
        android:maxWidth="5dp"
        android:maxLength="5"
        android:minHeight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_below="@+id/imageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Session"
        android:textSize="10sp"
        android:id="@+id/start_b"
        android:background="#800000"
        android:textColor="#ffffffff"
        android:onClick="start_session"
        android:maxWidth="1dp"
        android:maxLength="5"
        android:minHeight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView"
        android:layout_toLeftOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back Pocket"
        android:id="@+id/textView"
        android:textColor="#800000"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_below="@+id/Title"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/target_main"
        android:contentDescription="target_image"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView" />

</RelativeLayout>
