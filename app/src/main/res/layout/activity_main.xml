<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Accuracy In Your "
        android:id="@+id/Title"
        android:textColor="#800000"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/connect_b"
        android:background="#800000"
        android:textColor="#ffffffff"
        android:onClick="start_connect_bt"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Title"
        android:layout_alignEnd="@+id/Title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Session"
        android:id="@+id/start_b"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#800000"
        android:textColor="#ffffffff"
        android:onClick="start_session"
        android:layout_alignTop="@+id/connect_b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back Pocket"
        android:id="@+id/textView"
        android:textColor="#800000"
        android:textSize="50sp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/stabletarget"
        android:layout_below="@+id/Title"
        android:layout_centerHorizontal="true"
        android:contentDescription="target_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/connect_b2"
        android:layout_above="@+id/connect_b"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For the Bluetooth"
        android:id="@+id/bluetoothbaby"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/start_b"
        android:layout_toEndOf="@+id/start_b" />

</RelativeLayout>
